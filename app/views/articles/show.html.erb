<div class="container mx-auto w-full max-w-2xl mt-20">
  <h1 class="mb-4">記事詳細</h1>
  <div class="flex items-center mb-4">
    <h1>タイトル:</h1>
    <h1 class="font-bold text-lg ml-4"><%= @article.title %></h1>
  </div>
  <div class="flex items-center mb-4">
    <h1>本文:</h1>
    <h1 class="ml-4"><%= @article.content %></h1>
  </div>
  <%= link_to "編集", edit_article_path(@article), class: "btn btn-neutral mt-8" %>
  <%= link_to "削除", article_path(@article), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: 'btn btn-outline btn-accent' %>
</div>