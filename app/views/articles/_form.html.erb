<%= form_with model: @article do |f| %>
  <div class="mt-3">
    <%= f.label :title %>
    <%= f.text_field :title, class: "input input-bordered ml-2" %>
  </div>
  <div class="mt-3">
    <%= f.label :content %>
    <%= f.rich_text_area :content %>
  </div>
  <%= f.submit "登録", class: 'btn btn-primary mt-4' %>
<% end %>